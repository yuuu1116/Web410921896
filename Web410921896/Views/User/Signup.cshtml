
@{
    ViewBag.Title = "Signup";
}

<h2>會員註冊</h2>

@using (Html.BeginForm("SignUp", "User", FormMethod.Post))
{
    <p>姓名:@Html.TextBox("name")</p>
    <p>帳號:@Html.TextBox("account")</p>
    <p>密碼:@Html.Password("password")</p>
    <p>@ViewBag.Message</p>
    <input type="submit" value="註冊" />


}

